# Stage 1: Build stage
FROM golang:latest-alpine

WORKDIR /app

# Install Air for hot reload
RUN go install github.com/air-verse/air@latest

# Copy go.mod and go.sum first for caching dependencies
COPY go.mod go.sum ./
RUN go mod download

# Copy the entire source code
COPY . .

# Run Air (hot reload)
CMD ["air", "-c", ".air.toml"]
